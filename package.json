{
  "name": "domain-monitor",
  "version": "1.1.0",
  "description": "Domain Monitor System - Track domain availability and get notified",
  "main": "electron/main.js",
  "author": "Domain Monitor Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "bundle-python": "node scripts/bundle-python.js",
    "clean": "node scripts/cleanup.js",
    "clear": "npm run clean",
    "build:win": "npm run clean && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.domainmonitor.app",
    "productName": "Domain Monitoring System",
    "publish": {
      "provider": "github",
      "owner": "YOUR-GITHUB-USERNAME",
      "repo": "domain-monitor",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist-electron",
      "buildResources": "resources"
    },
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/**/*",
      "resources/**/*",
      ".env.example",
      "sample_keywords.csv",
      "!backend/__pycache__",
      "!backend/*.pyc"
    ],
    "extraResources": [
      {
        "from": "python-dist",
        "to": "python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Domain Monitor",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "license": "LICENSE"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.png",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "${productName} ${version}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png",
      "category": "Development",
      "artifactName": "${productName}-${version}.${ext}",
      "desktop": {
        "Name": "Domain Monitor",
        "Comment": "Track domain availability",
        "Categories": "Development;Utility;"
      }
    }
  }
}
